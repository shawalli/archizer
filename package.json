{
    "name": "amazon-order-archiver",
    "version": "1.0.0",
    "description": "Chrome extension for archiving and hiding Amazon orders with Google Sheets integration",
    "main": "manifest.json",
    "scripts": {
        "build": "webpack --mode production",
        "build:dev": "webpack --mode development",
        "build:watch": "webpack --mode development --watch",
        "test": "node scripts/test-runner.js",
        "test:watch": "node scripts/test-runner.js --watch",
        "test:coverage": "node scripts/test-runner.js --coverage",
        "lint": "eslint src/**/*.js",
        "lint:fix": "eslint src/**/*.js --fix",
        "dev": "webpack --mode development --watch",
        "clean": "rm -rf dist",
        "prebuild": "npm run clean"
    },
    "keywords": [
        "chrome-extension",
        "amazon",
        "order-archiver",
        "google-sheets"
    ],
    "author": "",
    "license": "MIT",
    "devDependencies": {
        "@babel/core": "^7.23.0",
        "@babel/plugin-transform-runtime": "^7.23.0",
        "@babel/preset-env": "^7.23.0",
        "@babel/runtime": "^7.28.2",
        "babel-loader": "^9.1.0",
        "copy-webpack-plugin": "^11.0.0",
        "css-loader": "^6.8.0",
        "eslint": "^8.50.0",
        "jest": "^29.0.0",
        "jest-environment-jsdom": "^30.0.5",
        "style-loader": "^3.3.0",
        "webpack": "^5.88.0",
        "webpack-cli": "^5.1.0"
    },
    "jest": {
        "testEnvironment": "jsdom",
        "setupFilesAfterEnv": [
            "<rootDir>/src/test-setup.js"
        ]
    }
}
