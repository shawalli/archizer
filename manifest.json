{
    "manifest_version": 3,
    "name": "Amazon Order Archiver",
    "version": "1.0.0",
    "description": "Archive and hide Amazon orders with Google Sheets integration",
    "permissions": [
        "activeTab",
        "storage",
        "identity"
    ],
    "host_permissions": [
        "https://www.amazon.com/*",
        "https://sheets.googleapis.com/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://www.amazon.com/*"
            ],
            "js": [
                "content-scripts/amazon-orders-early.js"
            ],
            "css": [
                "content-scripts/amazon-orders-early.css"
            ],
            "run_at": "document_start"
        },
        {
            "matches": [
                "https://www.amazon.com/*"
            ],
            "js": [
                "content-scripts/amazon-orders.js"
            ],
            "css": [
                "content-scripts/amazon-orders.css"
            ],
            "run_at": "document_end"
        }
    ],
    "background": {
        "service_worker": "background/background.js"
    },
    "action": {
        "default_popup": "popup/popup.html",
        "default_title": "Amazon Order Archiver",
        "default_icon": {
            "16": "icons/icon16.png",
            "32": "icons/icon32.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "oauth2": {
        "client_id": "${GOOGLE_CLIENT_ID}",
        "scopes": [
            "https://www.googleapis.com/auth/spreadsheets",
            "https://www.googleapis.com/auth/userinfo.email"
        ]
    },
    "web_accessible_resources": [
        {
            "resources": [
                "components/tagging-dialog.html",
                "components/tagging-dialog.css",
                "components/tagging-dialog.js"
            ],
            "matches": [
                "https://www.amazon.com/*"
            ]
        }
    ]
}